{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section id="product-content">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Регистрация</h1>

    {{ form_start(registrationForm) }}

        <div> {{ form_errors(registrationForm) }} </div>

        <div>
            {{ form_label(registrationForm.email,'Введите email') }}
        </div>

        <div class="mb-3">
            {{ form_widget(registrationForm.email)}}
        </div>

        <div>
            {{ form_label(registrationForm.plainPassword,'Введите пароль') }}
        </div>

        <div class="mb-5">
            {{ form_widget(registrationForm.plainPassword)}}
        </div>

        <div class="mx-auto d-grid">
            <button type="submit" class="btn btn-lg btn-dark">Зарегестрироваться</button>
        </div>
    {{ form_end(registrationForm) }}
    </section>
{% endblock %}
