{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/konkord.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <section id="middle-block">
        <div class="container-fluid">
            <div class="row mx-auto text-center">
                {% for product in products %}
                <div class="col-lg-6 col-md-6 ">
                    <img class="image-sections " src="images/MainPageIMG/{{ product.photo1 }}" alt="">
                    <h5><a class="links-sections" href="">{{ product.title }}</a></h5>
                    <h5><a class="links-sections" href="">{{ product.description1 }}</a></h5>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}